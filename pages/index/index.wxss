.index-container{
  background: #eee;
  height:100%;
}
.index-container .btn{
  border:0;
}
scroll-view{
  height:100%;
}
.index-container swiper-item image{
  width:100%;
  height:100%;
}
.index-nav ul{
  display: flex;
  justify-content: space-around;
}
.index-nav ul navigator{
  font-size:16px;
  color:#666;
  line-height: 40px;
  text-align: center;
  height:40px;
  width:20%;
}

.activity ul{
  display: flex;
  justify-content: space-around;
}
.activity ul li{
  flex:1;
}
.activity ul li image{
  width:100%;
  height:280rpx;
}
.activity ul .lileft{
  margin-right:5px;
}

.activity image{
  display: block;
  width: 100%;
  height:360rpx;
  padding-top:5px;
}
.hotgood{
  margin-top:10px;
}
.hotgood text{
  display: block;
  width:100%;
  text-align:center;
  font-size:18px;
}

.hotgood ul{
  display: flex;
  flex-wrap:wrap;
  padding:8px 8px 8px 0;
}

.hotgood ul navigator{
  background: #fff;
  width:48%;
  border-radius: 10px;
  margin-left:2%;
  box-sizing: border-box;
  overflow: hidden;
  margin-bottom: 8px;
  padding:8px;
}
.hotgood ul li image{
  width:100%;
  height:340rpx;
}
.hotgood ul li b{
  display: block;
  color:#333;
  font-size:14px;
  padding:4px;
  height:32px;
  overflow: hidden;
}
.red{
  display:inline-block;
  margin-right:4px;
  font-size:12px;
  color:red;
  padding-right:6px;
}
.del{
  font-size:12px;
  text-decoration: line-through;
  color:#999;
}
